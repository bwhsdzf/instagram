<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snow"
    tools:context=".activities.PostActivity">

    <EditText
        android:id="@+id/postMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="129dp"
        android:layout_height="128dp"
        android:layout_alignBottom="@+id/postMessage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-74dp"
        app:srcCompat="@mipmap/ic_upload_profile" />

    <Button
        android:id="@+id/postButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/postMessage"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="231dp"
        android:background="@drawable/button_post"
        android:text="Post"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>